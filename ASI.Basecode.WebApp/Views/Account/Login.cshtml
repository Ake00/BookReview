@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <form method="post" action="/Account/Login" id="loginForm">
        <div>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example11">Email</label>
            <input type="text" id="form2Example11" class="form-control"
                   asp-for="UserId" placeholder="Enter email" style="width: 600px;" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example22">@Password</label>
            <input type="password" id="form2Example22" class="form-control"
                   asp-for="Password" placeholder="Enter password" style="width: 600px;" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between pb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe" style="font-weight: bold; color: #515151;">
                    Remember Me
                </label>
            </div>
            <div class="text-muted text-right" style="width: 400px;">
                <a asp-controller="Account" asp-action="ForgotPass" style="color: #E35D6A; font-weight: bold;">@ForgotPass</a>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary btn-block login-btn" type="submit" style="background-color: #DBAC98; width: 600px; border-radius: 20px;">
                <b>@Login</b>
            </button>
        </div>
        <div class="d-flex align-items-center justify-content-center" style="margin-top: 30px;">
            <p class="mb-0 me-2 mr-1" style="color: #676767; font-weight: bold;">Didn't have an account?</p>
            <a asp-controller="Account" asp-action="Register" style="color: #E35D6A; font-weight: bold;">Create an Account</a>
        </div>
    </form>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}

